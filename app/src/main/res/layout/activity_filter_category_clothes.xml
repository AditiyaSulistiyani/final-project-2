<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterCategoryClothes"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menclothes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:background="@drawable/menformal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MENS CLOTHING AND APPARELS"
            android:textAlignment="center"

            android:textColor="@color/white">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/womenclothes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/edede">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WOMENS CLOTHING AND APPARELS"
            android:layout_gravity="center"
            android:textAlignment="center"

            android:textColor="@color/white">

        </TextView>

    </LinearLayout>


</LinearLayout>