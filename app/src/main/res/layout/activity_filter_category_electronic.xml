<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterCategoryElectronic">



    <LinearLayout
      android:id="@+id/product1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/laptop">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="100dp">

            <TextView
                android:id="@+id/nameproducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="NAMA PRODUCTS"
                android:textAlignment="center"

                android:textColor="@color/black">

            </TextView>


            <TextView
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KUANTITIAS"
                android:textAlignment="center"

                android:textColor="@color/black">

            </TextView>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/product2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/hanphoneipong">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="100dp">

            <TextView
                android:id="@+id/nameproducts2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="NAMA PRODUCTS"
                android:textAlignment="center"

                android:textColor="@color/black">

            </TextView>


            <TextView
                android:id="@+id/quantity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KUANTITIAS"
                android:textAlignment="center"

                android:textColor="@color/black">

            </TextView>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>